@model Practica.Models.Producto

@{
    ViewData["Tittle"] = "Eliminar un producto";
}
<p class="text-danger">@ViewBag.MensajeError</p>

<h3>Confirmar si desea borrar este producto</h3>

<div class="row col-md-4">
    <p><strong>@Html.DisplayNameFor(model => model.Nombre): </strong>@Html.DisplayFor(model => model.Nombre)</p>
    <p><strong>@Html.DisplayNameFor(model => model.Descripcion): </strong>@Html.DisplayFor(model => model.Descripcion)</p>
    <p><strong>@Html.DisplayNameFor(model => model.Precio): </strong>@Html.DisplayFor(model => model.Precio)</p>
    <p><strong>@Html.DisplayNameFor(model => model.Activo): </strong>@Html.DisplayFor(model => model.Activo)</p>
    <p><strong>@Html.DisplayNameFor(model => model.FechaDeAlta): </strong>@Html.DisplayFor(model => model.FechaDeAlta)</p>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id"/>

    <input type="submit" class="btn btn-danger" value="Borrar"/>
</form>
<div class="mt-3">
    @Html.ActionLink("volver","Index","Producto",new{},new{@class="btn btn-dark"})
</div>
